<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/otherUserAvatar"
            android:layout_width="@dimen/others_avatar_dimen"
            android:layout_height="@dimen/others_avatar_dimen"
            android:layout_margin="@dimen/others_margin"
            android:scaleType="fitXY"
            android:src="@drawable/user_pic" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/otherUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/others_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/utt_name"
                android:textColor="@color/text_Title_color"
                android:textSize="@dimen/text_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin"
                android:text="@string/text_view_profile" />
        </LinearLayout>
    </LinearLayout>
    <!-- Vạch chia -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:background="@color/vach_chia" />
    <!-- /Vạch chia -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/others_textview_options"
        android:textSize="@dimen/text_small_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/otherUserAvatar"
            android:layout_width="@dimen/others_option_pic_dimen"
            android:layout_height="@dimen/others_option_pic_dimen"
            android:layout_margin="@dimen/others_margin"
            android:scaleType="fitXY"
            android:src="@drawable/user_pic" />

        <TextView
            android:id="@+id/otherUserName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/others_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/utt_name"
            android:textColor="@color/text_Title_color"
            android:textSize="@dimen/text_title" />
    </LinearLayout>

</LinearLayout>