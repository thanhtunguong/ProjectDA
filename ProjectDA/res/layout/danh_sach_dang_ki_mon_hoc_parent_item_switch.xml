<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/vach_chia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvKiMonSwitch"
                android:elevation="1dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/tiet_hoc_circle_background"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvParentTenMonHocCTDTSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="5.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="test"
            android:textColor="@color/text_Title_color"
            android:textSize="@dimen/text_title" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivStatusSwitch"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <Switch
            android:id="@+id/switchBtnMonHocSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:focusable="false" />
        <!--
             <TextView 
		    android:id="@+id/tvMonTienQuyetNumber"
		    android:layout_width="0dp"
		    android:layout_weight="0.5"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"/>
        -->

    </LinearLayout>

</LinearLayout>